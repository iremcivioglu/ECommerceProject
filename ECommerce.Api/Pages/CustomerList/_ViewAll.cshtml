@using ECommerce.Entities.Model
@model IEnumerable<Customer>
<table class="table table-bordered" id="customerTable">
    <thead>
        <tr>
            <th>
                CustomerName
            </th>
            <th>
                CustomerSurname
            </th>
            <th>
                PhoneNumber
            </th>
            <th>
                Email
            </th>
            <th>
                CustomerAdress
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() != 0)
        {
            @foreach (var customer in Model)
            {
                <tr>
                    <td>
                        @customer.CustomerName
                    </td>
                    <td>
                        @customer.CustomerSurname
                    </td>
                    <td>
                        @customer.PhoneNumber
                    </td>
                    <td>
                        @customer.Email
                    </td>
                    <td>
                        @customer.CustomerAdress
                    </td>
                    <td text-right">
                        <a onclick="jQueryModalGet('?handler=CreateOrEdit&id=@customer.CustomerId', 'Edit Customer')" class="btn btn-info text-white"> Edit</a>
                        <form method="post" asp-page="Customers" asp-route-id="@customer.CustomerId" asp-page-handler="Delete" onsubmit="return jQueryModalDelete(this)" class="d-inline">
                            <button type="submit" class="btn btn-danger text-white"> Delete</button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $("#customerTable").DataTable();
    });
</script>