@using ECommerce.Entities.Model
@model IEnumerable<Category>
<table class="table table-bordered" id="categoryTable">
        <thead>
            <tr>
                <th>
                    CategoryName
                </th>
                <th>
                    CategoryDescription
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() != 0)
            {
                @foreach (var category in Model)
                {
                    <tr>
                        <td>
                            @category.CategoryName
                        </td>
                        <td>
                            @category.CategoryDescription
                        </td>
                        <td text-right">
                            <a onclick="jQueryModalGet('?handler=CreateOrEdit&id=@category.CategoryId', 'Edit Category')" class="btn btn-info text-white"> Edit</a>
                            <form method="post" asp-page="Categories" asp-route-id="@category.CategoryId" asp-page-handler="Delete" onsubmit="return jQueryModalDelete(this)" class="d-inline">
                                <button type="submit" class="btn btn-danger text-white"> Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <script>
        $(document).ready(function () {
            $("#categoryTable").DataTable();
        });
    </script>

