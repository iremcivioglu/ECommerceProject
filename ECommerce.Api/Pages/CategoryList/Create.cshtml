@page
@model CategoryList.CreateModel
@{
}
<br />
<h2 class="text-info">Yeni Kategori Oluştur</h2>
<br />

<div class="border container" style="padding: 20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Categories.CategoryName"></label>
            </div>
            <div class="col-6">
                <input asp-for="Categories.CategoryName" class="form-control" />
                <span asp-validation-for="Categories.CategoryName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Categories.CategoryDescription"></label>
            </div>
            <div class="col-6">
                <input asp-for="Categories.CategoryDescription" class="form-control" />
                <span asp-validation-for="Categories.CategoryDescription" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-4">
                <input type="submit" value="Created" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}