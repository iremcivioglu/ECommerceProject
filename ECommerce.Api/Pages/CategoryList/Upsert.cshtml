@page
@model CategoryList.UpsertModel
@{
}
<br />
<h2 class="text-info">@(Model.Categories.CategoryId != 0 ? "Edit" : "Create") Book</h2>
<br />

<div class="border container" style="padding: 20px">
    <form method="post">
        @if (Model.Categories.CategoryId != 0)
        {
            <input type="hidden" asp-for="Categories.CategoryId" />
        }
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Categories.CategoryName"></label>
            </div>
            <div class="col-6">
                <input asp-for="Categories.CategoryName" class="form-control" />
                <span asp-validation-for="Categories.CategoryName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Categories.CategoryDescription"></label>
            </div>
            <div class="col-6">
                <input asp-for="Categories.CategoryDescription" class="form-control" />
                <span asp-validation-for="Categories.CategoryDescription" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-4">
                <button type="submit" class="btn btn-primary form-control">@(Model.Categories.CategoryId != 0 ? "Update" : "Create")</button>
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}