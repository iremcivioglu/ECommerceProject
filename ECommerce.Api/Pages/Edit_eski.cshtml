@using ECommerce.Entities.Model
@model Category
<h1 class="h3">Edit Product</h1>
<hr>

<div class="row">
    <div class="col-md-8">
        <form asp-controller="Category" asp-action="Edit" method="POST">
            <input type="hidden" name="CategoryId" value="@Model.CategoryId">
            <div class="form-group row">
                <label asp-for="CategoryName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="CategoryName">
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="CategoryDescription" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <textarea class="form-control" asp-for="CategoryDescription"></textarea>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-primary">Save Product</button>
                </div>
            </div>
        </form>
    </div>
</div>